<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddCommentsActivity"
    android:background="@color/d_blue">

    <!-- TextView for displaying the heading "Add Comments Here" -->
    <TextView
        android:id="@+id/addNoteHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Add Comments Here"
        android:textColor="@color/orange"
        android:textSize="24sp" />

    <!-- FloatingActionButton for adding comments -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/orange"
        android:backgroundTint="@color/orange"
        android:src="@drawable/baseline_done_24"
        app:tint="@color/dd_blue" />

    <!-- EditText for entering the title of the comments -->
    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addNoteHeading"
        android:layout_marginTop="16dp"
        android:background="@drawable/g_border"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/poppins"
        android:hint="Enter the title"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/gold"
        android:textColorHint="@color/d_gold"
        android:textSize="20sp" />

    <!-- EditText for entering the description of the comments -->
    <EditText
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/poppins"
        android:hint="Enter the description"
        android:gravity="top"
        android:padding="12dp"
        android:textSize="18sp"
        android:background="@drawable/g_border"
        android:layout_below="@id/titleEditText"
        android:layout_marginTop="12dp"
        android:textColor="@color/gold"
        android:textColorHint="@color/d_gold"
        android:backgroundTint="@color/blue"/>

</RelativeLayout>
